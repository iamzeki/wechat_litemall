.cate-nav {
  position: fixed;
  left: 0;
  top: 0rpx;
  z-index: 1000;
}

.cate-nav-body {
  height: 84rpx;
  white-space: nowrap;
  background: #fff;
  border-top: 0px solid rgba(0, 0, 0, 0.15);
  overflow: hidden;
}

.cate-nav .item {
  display: inline-block;
  height: 84rpx;
  min-width: 130rpx;
  padding: 0 10rpx;
}

.cate-nav .item .name {
  display: block;
  height: 84rpx;
  padding: 0 20rpx;
  line-height: 84rpx;
  color: #333;
  font-size: 26rpx;
  width: auto;
  text-align: center;
}

.cate-nav .item.active .name {
  color: #eb5790;
  border-bottom: 1px solid #eb5790;
}

.banner {
  width: 750rpx;
  height: 350rpx;
  background: #eee;
}

.banner image {
  width: 750rpx;
  height: 600rpx;
}

.a-section {
  width: 750rpx;
  height: auto;
  overflow: hidden;
  background: #fff;
  color: #333;
  margin-top: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.a-section .b {
  border-bottom: 1px solid #ebebeb;
  margin: 0 20rpx;
  height: 270rpx;
  width: 710rpx;
}

.a-section  .img {
  margin-top: 12rpx;
  float: left;
  width: 240rpx;
  height: 240rpx;
}

.a-section  .right {
  position: relative;
  display: flex;
  flex-flow: row nowrap;
  flex-direction: column;
  justify-content: space-between;
  width: 456rpx;
  height: 252rpx;
  padding: 12rpx 0 0;
  margin-left: 252rpx;
  overflow: hidden;
}

.a-section  .name {
  width: 456rpx;
  display: block;
  padding-bottom: .2em;
  color: #333;
  line-height: 1.3;
  font-size: 35rpx;
}

.a-section  .desc {
  width: 456rpx;
  display: block;
  color: #999;
  line-height: 1.5;
  font-size: 30rpx;
}

.a-section  .price {
  width: 456rpx;
  display: block;
  color: #eb5790;
  line-height: 45rpx;
  font-size: 40rpx;
}

.a-section  .box {
  position: absolute;
  right: 0;
  bottom: 0;
}

.a-section  .icon {
  float: right;
  display: block;
  height: 50rpx;
  width: 50rpx;
  line-height: 50rpx;
}

.scoll-h{
  height: 100%;
  padding: 0 15rpx;
}